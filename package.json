{
  "name": "tab-magnet",
  "displayName": "Tab Magnet",
  "description": "Automatically groups related file tabs (e.g., .c/.h, .cpp/.hpp, .js/.css) side-by-side active editor.",
  "version": "0.0.3",
  "publisher": "viordash",
  "repository": {
    "type": "git",
    "url": "https://github.com/viordash/tab-magnet"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "tabs",
    "grouping",
    "cpp",
    "c++",
    "header"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Tab Magnet",
      "properties": {
        "tabMagnet.rules": {
          "type": "array",
          "default": [],
          "description": "Custom pairing rules. These rules take precedence over built-in defaults.",
          "items": {
            "type": "object",
            "properties": {
              "left": {
                "type": "string",
                "description": "Pattern for the 'Main' file (e.g. $(name).c)"
              },
              "right": {
                "type": "string",
                "description": "Pattern for the 'Related' file (e.g. include/$(name).h)"
              }
            },
            "required": [
              "left",
              "right"
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "mocha --ui tdd out/test/logic.test.js"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "icon": "icon.png",
  "dependencies": {
    "minimatch": "^10.1.1"
  }
}